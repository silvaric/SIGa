<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.isec.cub.siga.activity.MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableLayout
            android:layout_width="fill_parent"
            android:stretchColumns="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="#ff989b0e"
                android:text="@string/hello_world"
                android:textColor="#ff8c6e9b"
                android:textIsSelectable="false"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="20dp"
                android:layout_width="275dp"
                android:layout_height="71dp"
                android:contentDescription="@string/logoIsec"
                android:src="@drawable/isec" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_marginTop="20dp"
                android:layout_width="64dp"
                android:layout_height="66dp"
                android:contentDescription="@string/logoDeis"
                android:src="@drawable/deis" />

            <TextView
                android:id="@+id/textView2"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/titlePrograms"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff1843ff"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="138dp"
                android:layout_height="138dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/logoSiga"
                android:src="@drawable/ic_launcher" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descriptionTitle"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="51dp"
                android:password="false"
                android:phoneNumber="false"
                android:singleLine="false"
                android:text="@string/descriptionList"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffd26c13"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:text="@string/alunosTitle"
                android:textColor="#ff4c4a85"
                android:textSize="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:text="@string/alunos"
                android:textColor="#ff7875d2"
                android:textSize="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alunos2"
                android:textColor="#ff7875d2"
                android:textSize="20dp" />

        </TableLayout>
    </ScrollView>

</LinearLayout>

